{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build/",
    "module": "commonjs"
  },
  "exclude": ["node_modules"]
}
