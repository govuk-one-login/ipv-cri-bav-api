{
  "name": "bav",
  "version": "1.0.0",
  "description": "OneLogin BAV CRI",
  "repository": "https://github.com/govuk-one-login/ipv-cri-bav-api",
  "author": "GDS",
  "license": "MIT",
  "dependencies": {
    "@aws-lambda-powertools/commons": "1.8.0",
    "@aws-lambda-powertools/logger": "1.5.1",
    "@aws-lambda-powertools/metrics": "1.5.1",
    "@aws-sdk/client-cloudwatch": "3.758.0",
    "@aws-sdk/client-dynamodb": "3.758.0",
    "@aws-sdk/client-kms": "^3.777.0",
    "@aws-sdk/client-s3": "3.758.0",
    "@aws-sdk/client-sfn": "3.758.0",
    "@aws-sdk/client-sqs": "3.758.0",
    "@aws-sdk/client-ssm": "3.758.0",
    "@aws-sdk/credential-providers": "3.758.0",
    "@aws-sdk/lib-dynamodb": "3.758.0",
    "@pact-foundation/pact": "12.1.3",
    "@smithy/node-http-handler": "4.0.3",
    "aws-xray-sdk-core": "^3.4.1",
    "axios": ">=1.3.4",
    "body-parser": "^1.20.2",
    "class-validator": "0.14.0",
    "dotenv-cli": "^7.3.0",
    "ecdsa-sig-formatter": "^1.0.11",
    "esbuild": "0.14.14",
    "express": "^4.18.2",
    "express-asyncify": "^2.1.2",
    "jose": "^4.11.2",
    "lodash": "^4.17.21",
    "node-jose": "^2.1.1",
    "node-rsa": "^1.1.1",
    "notifications-node-client": "^7.0.0"
  },
  "scripts": {
    "unit": "./node_modules/.bin/jest --testPathPattern=tests/unit --coverage",
    "test:unit": "npm run compile && npm run unit",
    "lint:fix": "eslint --fix --output-file ./reports/eslint/report.html --format html -c eslint.config.mjs --ext *.ts .",
    "compile": "./node_modules/.bin/tsc",
    "lint": "eslint -c eslint.config.mjs *.ts .",
    "test:infra": "./node_modules/.bin/jest --testMatch '**/infra/?(*.)test.ts' ",
    "api": "JEST_JUNIT_OUTPUT_NAME=api-report.xml ./node_modules/.bin/jest --runInBand --testPathPattern=tests/api/backend/",
    "test:api": "npm run compile && npm run api",
    "test:pii": "bash ./check-logs.sh",
    "kill:dynamodblocal": "cd tests/contract; ./scripts/kill-dynamodb-local.sh",
    "start:dynamodblocal": "cd tests/contract; ./scripts/setup-dynamodb-local.sh",
    "test:pactconnection": "cd tests/contract; ./scripts/test-pact-connection.sh",
    "start:contract": "npm-run-all -s start:dynamodblocal test:pactconnection wait-start:contract",
    "wait-start:contract": "wait-on tcp:127.0.0.1:8000 && cd tests/contract && ts-node ./app.ts",
    "test:provider": "./node_modules/.bin/jest --testMatch '**/contract/BavCriProvider.test.ts' --coverage=false",
    "test:contract": "wait-on tcp:127.0.0.1:3000; cd tests/contract; npm run test:provider && npm run kill:dynamodblocal",
    "test:contract:ci": "dotenv -e.env.contract -- npm-run-all -p -r start:contract test:contract"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.109",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.17.13",
    "@types/node": "^20.14.8",
    "@types/node-jose": "^1.1.10",
    "@types/node-rsa": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "8.26.0",
    "ajv": "^8.12.0",
    "aws-cdk-lib": "^2.147.3",
    "aws4-axios": "^3.2.24",
    "dotenv": "^16.3.1",
    "eslint": "9.21.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-jsdoc": "50.6.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.6.0",
    "fast-xml-parser": "^4.2.7",
    "jest": "^29.4.1",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.2",
    "ts-standard": "^12.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.9.4",
    "wait-on": "^7.2.0",
    "yaml-cfn": "^0.3.2"
  },
  "engines": {
    "node": "^20.18.3"
  }
}
